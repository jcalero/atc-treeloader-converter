<UserControl x:Class="atc_treeloader_converter.Controls.PartCatalog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels1="clr-namespace:atc_treeloader_converter.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.DataContext>
		<viewModels1:PartCollectionViewModel />
	</UserControl.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<ListBox Name="PartsList" ItemsSource="{Binding PartCollection}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Label Content="{Binding Title}"/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Grid Grid.Row="1" MaxHeight="50px">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Button Name="AddPartButton" Grid.Column="0" HorizontalAlignment="Center" Content="Add" Click="AddPartClick">
				<Button.DataContext>
					<viewModels1:TechTreeViewModel/>
				</Button.DataContext>
			</Button>
		</Grid>
	</Grid>
</UserControl>
